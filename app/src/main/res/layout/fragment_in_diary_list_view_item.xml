<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context="com.team3.fastcampus.record.Diary.DiaryViewFragment">


<android.support.v7.widget.CardView
    android:id="@+id/diary_card"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/in_diary_list_view_title"
            android:text="Seoul"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#BD264F"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_marginTop="20dp"
            android:textSize="8dp"
            android:textColor="#666666"
            android:id="@+id/in_diary_list_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2016년 June 28일"
            android:layout_below="@+id/in_diary_list_view_imageViewPager"/>

        <TextView
            android:id="@+id/in_diary_list_view_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/in_diary_list_view_date"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:text="proin libero nunc consequat interdum varius sit amet mattis vulputate enim nulla aliquet porttitor lacus luctus accumsan tortor posuere ac ut consequat semper viverra nam libero justo laoreet sit amet cursus sit"
            />


        <TextView
            android:id="@+id/in_diary_list_view_more"
            android:layout_height="30dp"
            android:text="&#8942;"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:layout_width="30dp"
            android:gravity="center" />

        <android.support.v4.view.ViewPager
            android:id="@+id/in_diary_list_view_imageViewPager"
            android:layout_width="match_parent"
            android:minHeight="200dp"
            android:layout_below="@+id/in_diary_list_view_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_height="200dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>


</RelativeLayout>