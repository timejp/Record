<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_in_diary_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.team3.fastcampus.record.InDiary.InDiaryDetailActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/in_diary_list_view_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/in_diary_detail_content_area">

    </android.support.v4.view.ViewPager>


    <RelativeLayout
        android:id="@+id/in_diary_detail_content_area"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:background="#282828">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/in_diary_detail_content_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:textSize="16dp" />

        </ScrollView>


    </RelativeLayout>
</RelativeLayout>
